<%- include('../partials/head') %>
    <%- include('../partials/header') %>

        <h1 class="mb-3">Search</h1>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <form method="get" action="/search" class="card card-body">
                    <h5 class="mb-3">Search by Title</h5>
                    <input type="text" name="title" class="form-control mb-2" placeholder="e.g. Pizza"
                        value="<%= (selected && selected.title) || '' %>">
                    <button class="btn btn-primary">Search</button>
                </form>
            </div>

            <div class="col-md-6">
                <form method="get" action="/search" class="card card-body">
                    <h5 class="mb-3">Search by Category</h5>
                    <select name="category" class="form-select mb-2">
                        <option value="">-- Choose category --</option>
                        <% (categories || []).forEach(c=> { %>
                            <option value="<%= c %>" <%=(selected && selected.category===c) ? 'selected' : '' %>>
                                <%= c %>
                            </option>
                            <% }) %>
                    </select>
                    <button class="btn btn-primary">Filter</button>
                </form>
            </div>
        </div>

        <%- include('../partials/posts', { posts: posts }) %>

            <%- include('../partials/footer') %>